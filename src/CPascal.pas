unit CPascal;

{$I CPascal.Defines.inc}

interface

uses
  System.SysUtils,
  CPascal.Platform,
  CPascal.Exception,
  CPascal.Compiler;

type
  { CPascal.Exception.pas }
  ECPException = CPascal.Exception.ECPException;

  { CPascal.Compiler.pas }
  PCPModuleRef        = CPascal.Compiler.PCPModuleRef;
  ICPCompilerProgress = CPascal.Compiler.ICPCompilerProgress;
  TCPCompilerOptions  = CPascal.Compiler.TCPCompilerOptions;
  TCPCompiler         = CPascal.Compiler.TCPCompiler;

var
  { CPascal.Platform.pas }
  CPHasConsole: function(): Boolean;
  CPPrint: procedure(const AText: string; const AArgs: array of const);
  CPPrintLn: procedure(const AText: string; const AArgs: array of const);

{ CPascal.Exception.pas }
procedure CPDisplayExceptionError(const AError: ECPException); overload;
procedure CPDisplayExceptionError(const AError: Exception); overload;

implementation

procedure CPDisplayExceptionError(const AError: ECPException);
begin
  // Forward to the actual implementation in CPascal.Exception
  CPascal.Exception.CPDisplayExceptionError(AError);
end;

// Overloaded wrapper for Exception - forwards to actual implementation
procedure CPDisplayExceptionError(const AError: Exception);
begin
  // Forward to the actual implementation in CPascal.Exception
  CPascal.Exception.CPDisplayExceptionError(AError);
end;

initialization

  { CPascal.Platform.pas }
  CPHasConsole := CPascal.Platform.CPHasConsole;
  CPPrint := CPascal.Platform.CPPrint;
  CPPrintLn := CPascal.Platform.CPPrintLn;

end.
